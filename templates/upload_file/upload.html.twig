{% extends 'base.html.twig' %}

{% block title %}Hello UploadFileController!{% endblock %}

{% block body %}
    <style>
        .wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="wrapper">
        <div>
            {{ form_start(form) }}
                <div>
                    {{ form_errors(form) }}
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_row(form) }}
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
        <div>
            {% for param in params %}
                <p>{{ param }}</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
